<Page x:Class="FELM.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FELM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFEC2626" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="3*"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Grid.Column="0"
                 
                  
                  />
            <Grid Grid.Row="1"
                  Grid.Column="0"
                 
                  
            />
            <Grid Grid.Row="2"
                  Grid.Column="0"
                  
                  
            />
            <Grid Grid.Row="0"
                  Grid.Column="1"
                 
                  
            />
            <Grid Grid.Row="1"
                  Grid.Column="1"
            />
            
            

            <Grid Grid.Row="2"
                  Grid.Column="1"
                  
                  
            />
            <Grid Grid.Row="0"
                  Grid.Column="2"
                  
                  
            />
            <Grid Grid.Row="1"
                  Grid.Column="2"
                  
                  
            />
            <Grid Grid.Row="2"
                  Grid.Column="2"
                  
            />
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">

                <Label Name="Header" 
                       Content="Login" 
                       Background="White" 
                       VerticalContentAlignment="Center" 
                       HorizontalContentAlignment="Center"
                       Margin="0,10"
                >
                </Label>

                <Label Name="Username" 
                       Content="UserName" 
                       Background="White" 
                       VerticalContentAlignment="Center" 
                       HorizontalContentAlignment="Center"
                       Margin="0,10"
                >
                </Label>
                <TextBox Name="LoginTextBox" Margin="10" Height="30"></TextBox>
                <Label Name="Password" 
                       Content="Password" 
                       Background="White" 
                       HorizontalContentAlignment="Center" 
                       VerticalContentAlignment="Center"
                       Margin="0,10"
                >
                </Label>
                <TextBox Name="PasswordTextBox" Margin="10" Height="30"></TextBox>

                <Button Content="Login" Click="Button_Click_3"></Button>
            </StackPanel>

        </Grid>

    </Grid>
</Page>


